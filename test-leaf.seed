{
    "name": "vapor template",
    "excludes": [
        "leaf.seed",
        ".git/",
        ".xcodeproj/",
        ".build/",
        ".png",
        "Resources/",
        "Public/"
    ],
    "conditionalIncludes": [
        {
            "condition": {
                "var": "leaf",
                "equals": "true"
            },
            "includes" [
                "Resources/"
                "Public/"
            ]
        }
    ],
    "variables": [
        {
            "var": "name",
            "display": "what would you like to name your app?",
            "default": "VaporApp"
        },
        {
            "var": "leaf",
            "display": "would you like to use leaf?",
            "choices": ["true", "false"]
        },
        { 
            "var": "fluent",
            "display": "would you like to use fluent?",
            "choices": ["true", "false"]
        },
        {
            "var": "fluentdb",
            "display": "which fluent database?",
            "choices": [
                "SQLite",
                "PostgreSQL",
                "MySQL"
            ],
            "conditions": [
                {
                    "var": "fluent",
                    "equals": "true"
                }
            ]
        },
        {
            "var": "fluentversion",
            "display": "which version?",
            "default": "3.0.0",
            "conditions": [
                {
                    "var": "fluentdb",
                    "in": ["SQLite", "MySQL"]
                }
            ]
        },
        {
            "var": "fluentversion",
            "display": "which version?",
            "default": "1.0.0",
            "conditions": [
                {
                    "var": "fluentdb",
                    "equals": "PostgreSQL"
                }
            ]
        }
    ],
    
}